@model GameStoreDAL.Entities.User
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

    <div class="container vh-100 mt-4">
        <div class="input-group input-group-lg">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-lg"><i class="fas fa-user font-20"></i></span>
            </div>
            <input type="text" class="form-control" value="@User.Identity.Name" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" readonly>
        </div>
        <div class="input-group input-group-lg mt-2">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-lg"><i class="fas fa-envelope font-20"></i></span>
            </div>
            <input type="text" class="form-control" value="@Model.Email" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" readonly>
        </div>
        <div class="input-group input-group-lg mt-2">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-lg"><i class="fas fa-phone font-20"></i></span>
            </div>
            <input type="text" class="form-control" value="@Model.PhoneNumber" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" readonly>
        </div>
        @if (!User.IsInRole("Admin"))
        {
        <p class="text-center mt-3">
            @Html.ActionLink("My address", "Address", null, new { @class = "btn btn-warning text-white font-18" })
        </p>
        }
    </div>

